<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <EditText
        android:id="@+id/editAlarmMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mensaje alarma (opcional)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCrearAlarma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear Alarma"
        app:layout_constraintTop_toBottomOf="@id/editAlarmMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnNomIntent2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom_intent2"
        app:layout_constraintTop_toBottomOf="@id/btnCrearAlarma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Texto informativo (opcional) -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usa Crear Alarma o abre Nom_intent2"
        app:layout_constraintTop_toBottomOf="@id/btnNomIntent2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
